<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/css/listings.css" />
<link rel="stylesheet" href="/css/banner.css" />
<link rel="stylesheet" href="/css/filter.css" />
<div class="banner-box"></div>
<div class="filter-category-box">
  <a href="/category/Indian">
    <div class="icon-1">
      <i class="fa-solid fa-bowl-rice"></i>
      <p class="filter-category-name-p">Indian</p>
    </div></a
  >

  <a href="/category/Italian">
    <div class="icon-2">
      <i class="fa-solid fa-pizza-slice"></i>
      <p class="filter-category-name-p">Italian</p>
    </div></a
  >

  <a href="/category/Mexican">
    <div class="icon-3">
      <i class="fa-solid fa-pepper-hot"></i>
      <p class="filter-category-name-p">Mexican</p>
    </div></a
  >

  <a href="/category/Chinese">
    <div class="icon-4">
      <i class="fa-solid fa-fish"></i>
      <p class="filter-category-name-p">Chinese</p>
    </div></a
  >

  <a href="/category/Japanese">
    <div class="icon-5">
      <i class="fa-solid fa-bowl-food"></i>
      <p class="filter-category-name-p">Japanese</p>
    </div></a
  >
</div>

<!-- Main Listings Showcase -->
<div class="container-fluid py-4 px-4">
  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 g-4">
    <% for (let restraunt of restraunts) { %>
    <a href="/restraunts/<%= restraunt._id%>" class="anchor-show">
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img
            src="<%= restraunt.image.url %>"
            class="card-img-top"
            alt="img"
          />
          <div class="card-body">
            <h5><b>Title:</b> <%= restraunt.title%></h5>
            <p class="card-text">
              <i
                ><b>Price :</b> <%= restraunt.price.toLocaleString("en-IN")%></i
              >
              &nbsp; • &nbsp;
              <i><b>Location :</b> <%= restraunt.location%></i>
              <br />
              <i><b>Category :</b> <%= restraunt.category%></i> &nbsp; • &nbsp;
              <i><b>Country :</b> <%= restraunt.country%></i>
            </p>
          </div>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</div>
